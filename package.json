{
  "name": "@ridendine/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:api": "cd services/api && npm run start:dev",
    "dev:dispatch": "cd services/dispatch && npm run dev",
    "dev:routing": "cd services/routing && npm run dev",
    "dev:realtime": "cd services/realtime && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:build:nocache": "docker-compose build --no-cache",
    "docker:up": "docker-compose up",
    "docker:up:detached": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:clean": "docker-compose down -v --rmi local",
    "db:up": "docker-compose up -d postgres redis",
    "db:down": "docker-compose down postgres redis",
    "db:migrate": "bash database/scripts/run-migrations.sh",
    "db:migrate:docker": "docker-compose exec postgres /docker-entrypoint-initdb.d/02-run-migrations.sh",
    "db:seed": "psql postgresql://ridendine:ridendine_dev_password@localhost:5432/ridendine_dev -f database/seeds/001_test_users.sql",
    "db:reset": "npm run db:down && npm run db:up && sleep 10 && npm run db:migrate && npm run db:seed",
    "db:backup": "bash database/scripts/backup.sh",
    "db:restore": "bash database/scripts/restore.sh",
    "create-admin": "ts-node scripts/create-admin.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/cli": "11.0.16",
    "eslint-config-next": "16.1.6",
    "next": "16.1.5"
  }
}
